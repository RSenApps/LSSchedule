<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setupTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:text="1st Class: " />

            <EditText
                android:id="@+id/class1"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="2nd Class: " />

            <EditText
                android:id="@+id/class2"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="3rd Class: " />

            <EditText
                android:id="@+id/class3"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="4th Class: " />

            <EditText
                android:id="@+id/class4"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:text="5th Class: " />

            <EditText
                android:id="@+id/class5"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/c6label"
                android:layout_column="0"
                android:text="6th Class: " />

            <EditText
                android:id="@+id/class6"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/c7label"
                android:layout_column="0"
                android:text="7th Class: " />

            <EditText
                android:id="@+id/class7"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/c8label"
                android:layout_column="0"
                android:text="8th Class: " />

            <EditText
                android:id="@+id/class8"
                android:layout_column="1"
                android:editable="false"
                android:gravity="left"
                android:textScaleX=".7" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:drawableRight="@drawable/btn_next"
                android:paddingLeft="15dp"
                android:text="Done"
                android:textSize="18dp" >
            </Button>
        </TableRow>
    </TableLayout>

</ScrollView>